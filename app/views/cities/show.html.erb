<div class="container">  
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Highlighting the Locations</h1><br><br>
      <div class="account-wall">
				<%= form_tag translate_cities_path,:method => :POST %>
					<div style = 'width:500px;'>
						<table>
							<tr>
								<td>
									<%= text_area :text, :english, rows: 5, cols: 50, :class => 'form-control'%> 
								</td>
							</tr>
							<tr>
								<td>
									<%= submit_tag 'Translate',:class => 'btn btn-primary btn-lg btn-block'%>
								</td>
							</tr>
					</div>
			</div>
		</div>
	</div>
</div>